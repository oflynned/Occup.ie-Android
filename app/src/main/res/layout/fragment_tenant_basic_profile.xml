<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_above="@+id/tenant_login_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tenant_login_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="Choose your sign up method below in order to find new property as a tenant." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tenant_login_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:text="LOGIN" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="Continue without logging in" />

</RelativeLayout>